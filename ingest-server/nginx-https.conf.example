# Nginx configuration example for HTTPS/HTTP/2 with TLS termination
# This allows the Axum server to run on HTTP while nginx handles TLS

upstream ingest_server {
    server 127.0.0.1:3090;
}

server {
    listen 443 ssl http2;
    server_name localhost;

    # SSL certificates (use Let's Encrypt for production)
    ssl_certificate /path/to/certs/server.crt;
    ssl_certificate_key /path/to/certs/server.key;

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # HTTP/2 settings
    http2_max_field_size 16k;
    http2_max_header_size 32k;

    # Ingest endpoint
    location /ingest/ {
        proxy_pass http://ingest_server;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Allow large frame uploads
        client_max_body_size 10M;
    }

    # WebSocket endpoint
    location /ws/ {
        proxy_pass http://ingest_server;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }
}

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name localhost;
    return 301 https://$server_name$request_uri;
}

